@model IEnumerable<Employee>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 d-flex align-items-strech">
            <div class="card w-100">
                <div class="card-body">
                    <div class="d-sm-flex d-block align-items-center justify-content-between mb-9">
                        <div>
                            <h2 class="text-primary">
                                รายชื่อพนักงาน
                            </h2>
                        </div>
                        <div>
                            <a asp-controller="Employee" asp-action="Insert" class="btn btn-primary">
                                เพิ่มพนักงาน
                            </a>
                        </div>
                    </div>
                    <div>
                        <table class="table display nowrap" id="tblData" width="100%">
                            <thead>
                                <tr>
                                    <th>ลำดับที่</th>
                                    <th>รหัส</th>
                                    <th>ชื่อจริง</th>
                                    <th>นามสกุล</th>
                                    <th>ชื่อแผนก</th>
                                    <th>แก้ไข</th>
                                    <th>ลบ</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var i = 0;
                                }
                                @foreach (var employee in @Model)
                                {
                                    i = i + 1;
                                    <tr>
                                        <td>@i</td>
                                        <td>@employee.EmployeeCode</td>
                                        <td>@employee.FirstName</td>
                                        <td>@employee.LastName</td>
                                        <td>@employee.Department.Name</td>
                                        <td>
                                            <a class="btn btn-warning" asp-action="Update" asp-route-Id="@employee.Id">แก้ไข</a>
                                        </td>
                                        <td>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-Id="@employee.Id">ลบ</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/datatable.js"></script>
}